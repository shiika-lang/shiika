require 'strscan'
require 'shiika/ast'

---- inner
KEYWORDS = /extern|class|def|initialize|do|end|if|elsif|else|for|return|var|self|true|false/

SYMBOLS = Regexp.union(*"
... >= <= == != && || -> < > ( ) { } . + - * / % = , ; :
".split.map{|x| Regexp.new(Regexp.quote(x))})

def parse(str)
  @yydebug = true

  @q = []
  s = StringScanner.new(str)
  until s.empty?
    case
    when s.scan(/\n/)
      @q << ['\n', :NL]
    when s.scan(/[ \t]+/)
      # skip whitespace
    when s.scan(%r{#[^\n]*})
      # skip comment
    when m = s.scan(SYMBOLS)
      @q << [m, :SYMBOL]
    when m = s.scan(/\d+\.\d+/)
      @q << [:FLOAT, m.to_f]
    when m = s.scan(/\d+/)
      @q << [:INTEGER, m.to_i]
    when m = s.scan(/#{KEYWORDS}\b/)
      @q << [m, :KEYWORD]
    when m = s.scan(/@[\w_]+/)
      @q << [:IVAR, m]
    when m = s.scan(/[A-Z_][\w_]*\b/)
      @q << [:CONST, m]
    when m = s.scan(/[\w_]+[!?]/)  # names allowed for methods only
      @q << [:IDENT_M, m]
    when m = s.scan(/[\w_]+/)
      @q << [:IDENT, m]
    else
      raise "no match: #{s.inspect}"
    end
  end

  do_parse
rescue 
  #p q: @q
  raise
end

def next_token
  @q.shift
end
