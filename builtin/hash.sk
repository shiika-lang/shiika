class Pair<A, B>
  def initialize(@fst: A, @snd: B); end
end

class Triple<A, B, C>
  def initialize(@fst: A, @snd: B, @thd: C); end
end

# TODO: Make this behave as ordered hash (like Ruby's)
class Hash<K, V>
  N_TABLES = 1000

  class Table<KK, VV>
    def initialize
      @pairs = Array<Pair<KK, VV>>.new
    end

    # Set the value of specified key.
    def []=(key: KK, value: VV)
      var done = false
      @pairs.each do |pair: Pair<KK, VV>|
        if pair.fst == key
          pair.snd = value
          done = true
        end
      end
      unless done
        @pairs.push(Pair<KK, VV>.new(key, value))
      end
    end

    # Get the value of specified key.
    def [](key: KK) -> Maybe<VV>
      var ret = None
      @pairs.each do |pair: Pair<KK, VV>|
        if pair.fst == key
          ret = Some.new(pair.snd)
        end
      end
      ret
    end

    # Return true if `self` has `key` (compared with `==`)
    def has_key?(key: KK) -> Bool
      var ret = false
      @pairs.each do |pair: Pair<KK, VV>|
        if pair.fst == key
          ret = true
        end
      end
      ret
    end

    # Return list of the keys
    def keys -> Array<KK>
      ret = Array<KK>.new
      @pairs.each do |pair: Pair<KK, VV>|
        ret.push(pair.fst)
      end
      ret
    end

    # Return list of the values
    def values -> Array<VV>
      ret = Array<VV>.new
      @pairs.each do |pair: Pair<KK, VV>|
        ret.push(pair.snd)
      end
      ret
    end
  end

  def initialize
    @tables = Array<Hash::Table<K, V>>.new
    N_TABLES.times{|_: Int| @tables.push(Hash::Table<K, V>.new) }
  end

  # Return the `Hash::Table` which contains the `key`
  def _table(key: K) -> Hash::Table<K, V>
    @tables[key.hash % @tables.length]
  end

  # Set the value of specified key.
  def []=(key: K, value: V)
    _table(key)[key] = value
  end

  # Get the value of specified key, if any.
  def [](key: K) -> Maybe<V>
    _table(key)[key]
  end

  # Return true if `self` has `key` (compared with `==`)
  def has_key?(key: K) -> Bool
    _table(key).has_key?(key)
  end

  # Return list of the keys
  def keys -> Array<K>
    ret = Array<K>.new
    @tables.each do |table: Hash::Table<K, V>|
      ret.append(table.keys)
    end
    ret
  end

  # Return list of the values
  def values -> Array<V>
    ret = Array<V>.new
    @tables.each do |table: Hash::Table<K, V>|
      ret.append(table.values)
    end
    ret
  end
end
